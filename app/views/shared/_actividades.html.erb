                    <%= link_to (image_tag "https://s3.amazonaws.com/imagenes.notelimites/micrositios/photos/sitios/big/#{estado.photo_file_name}", class: "img-responsive", alt: x ), estado%>
                    <div style="font-weight: bold; overflow: hidden"><%= link_to estado.name, estado		  %> </div>
                <% end %>
            <% end %>
        </div>
    </li>
<% end %>
