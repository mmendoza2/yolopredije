
  <% @micrositios.limit(20).order("RANDOM()").each do |x| %>



              <%  x.followers.limit(10).order("RANDOM()").each do |y|  %>
              <div class="thumbnail">
                <div class="caption">

                  <div>
                    <% if y.photo_file_name.blank?  %>
                        <% if y.avatar.blank?  %>
                            <%= link_to image_tag("http://imagenes.notelimites.s3.amazonaws.com/users/default_user.png", class: "avatarchico"), y %>
                        <%	 else %>
                            <%= link_to image_tag(y.avatar, class: "avatarchico" ), y %>
                        <% end %>
                    <% else %>
                        <%= link_to image_tag(y.photo.url(:square), class: "avatarchico"), y %>
                    <%	 end %>
                  </div>
                  <h4><%= y.name %></h4>
                  <p>ahora está siguiendo a <%= x.name %>  </p>
                      <% if x.photo_file_size? %>
                          <%= link_to (image_tag x.photo.url(:small), class: "img-responsive"), x %>
                          <div style="font-weight: bold; overflow: hidden"><%= link_to x.name, x		  %> </div>
                      <% else %>
                          <%= link_to (image_tag "https://s3.amazonaws.com/imagenes.notelimites/micrositios/photos/sitios/big/#{x.photo_file_name}", class: "img-responsive"),x %>
                          <div style="font-weight: bold; overflow: hidden"><%= link_to x.name, x		  %> </div>
                      <% end %>

                  <h3><%= x.name %></h3>
                  <p>...</p>
                </div>
              </div>

              <% end %>



  <% end %>



  <% @micrositios.limit(5).order("RANDOM()").each do |x| %>

  <div class="thumbnail">
    <div class="caption">
      <div>
        <% if x.user.photo_file_name.blank?  %>
            <% if x.user.avatar.blank?  %>
                <%= link_to image_tag("http://imagenes.notelimites.s3.amazonaws.com/users/default_user.png", class: "avatarchico"), x.user %>
            <%         else %>
                <%= link_to image_tag(x.user.avatar, class: "avatarchico"), x.user %>
            <% end %>
        <% else %>
            <%= link_to image_tag(x.user.photo.url(:square), class: "avatarchico"), x.user  %>
        <%         end %>
      </div>
      <h4><%= x.user.name %></h4>
      <p>creó el lugar</p>

      <% if x.photo_file_size? %>
          <%= link_to (image_tag @micrositio.photo.url(:biggest), class: "img-responsive"),x  %>
      <% else %>
          <%= link_to (image_tag "https://s3.amazonaws.com/imagenes.notelimites/micrositios/photos/sitios/big/#{x.photo_file_name}", class:"img-responsive"),x %>
      <% end %>
      <h3><%= x.name %></h3>

    </div>
  </div>

  <% end %>

